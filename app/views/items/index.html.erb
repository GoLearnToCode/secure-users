<div class="page-header">
  <h1>My To-Do List
    <small><%= pluralize(@items.count, 'item') %></small>
  </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.content, item_path(item) %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-primary'%></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a New Item', new_item_path, class: 'btn btn-primary' %>
